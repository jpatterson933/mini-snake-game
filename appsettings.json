{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "Game": {
    "GridWidth": 30,
    "GridHeight": 30,
    "BasePowerUpSpawnChance": 0.15,
    "BoostedPowerUpSpawnChance": 0.50,
    "TicksBeforeNextPowerUpCanSpawn": 30,
    "PowerUpExtensionPerFoodInSeconds": 1.0,
    "BaseGameTickIntervalInSeconds": 0.15,
    "BaseGameTickIntervalInMilliseconds": 100
  }
}
